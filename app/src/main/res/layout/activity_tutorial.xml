<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="32dp">

    <!-- Main Card Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/mainCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="40dp"
            android:gravity="center">

            <!-- Icon -->
            <ImageView
                android:id="@+id/tutorialIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@android:drawable/ic_media_play"
                android:layout_marginBottom="24dp"
                app:tint="@color/primary_color" />

            <!-- Title -->
            <TextView
                android:id="@+id/tutorialTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get Started"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/roboto_medium" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/tutorialSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Learn the basics with our interactive tutorial"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="32dp"
                android:gravity="center"
                android:lineSpacingExtra="4dp" />

            <!-- Tutorial Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/tutorialButton"
                android:layout_width="220dp"
                android:layout_height="56dp"
                android:text="Watch Tutorial"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/button_gradient"
                android:clickable="true"
                android:focusable="true"
                android:elevation="8dp"
                app:cornerRadius="28dp"
                app:iconGravity="textStart"
                app:icon="@android:drawable/ic_media_play"
                app:iconTint="@android:color/white"
                app:iconSize="24dp"
                android:layout_marginBottom="16dp" />

            <!-- Secondary Action -->

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Background Decoration -->
    <View
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/circle_decoration"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-60dp"
        android:layout_marginEnd="-60dp"
        android:alpha="0.1" />

    <View
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/circle_decoration"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-40dp"
        android:layout_marginStart="-40dp"
        android:alpha="0.1" />

</RelativeLayout>